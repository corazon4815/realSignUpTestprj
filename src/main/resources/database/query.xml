<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.mapper.MemberMapper">

    <!--로그인 체크-->
    <select id="loginChk" resultType="int" parameterType="hashMap">
        SELECT
               count(*)
        FROM   MEMBER_TB
        WHERE  MEMBER_ID=#{memberId}
        AND    MEMBER_PW=#{memberPw}
    </select>

    <!--아이디 중복체크-->
    <select id="duplChk" resultType="int" parameterType="String">
        SELECT
               count(*)
        FROM   MEMBER_TB
        WHERE  MEMBER_ID=#{memberId}
     </select>

    <!--회원가입-->
    <insert id="memberRegister" parameterType="org.example.model.MemberDto">
        INSERT INTO MEMBER_TB
         (
            MEMBER_ID,
            MEMBER_NAME,
            MEMBER_PW,
            MEMBER_ADDRESS,
            MEMBER_BIRTH
         )VALUES (
            #{memberId},
            #{memberName},
            #{memberPw},
            #{memberAddress},
            #{memberBirth}
         )
     </insert>

    <!--메인 회원리스트-->
    <select id="getMemberList" resultType="org.example.model.MemberDto">
        SELECT
            MEMBER_ID,
            MEMBER_NAME,
            MEMBER_ADDRESS,
            REGDATE as regDate
        FROM   MEMBER_TB
    </select>

    <!--회원 클릭시 정보 가져오기-->
    <select id="getMember" resultType="org.example.model.MemberDto" parameterType="String">
        SELECT
            MEMBER_ID,
            MEMBER_NAME,
            MEMBER_ADDRESS,
            MEMBER_BIRTH,
            REGDATE as regDate
        FROM   MEMBER_TB
        WHERE  MEMBER_ID = #{memberId};
    </select>

    <!--멤버 삭제-->
    <delete id="deleteMember" parameterType="String">
        DELETE
        FROM MEMBER_TB
        WHERE MEMBER_ID = #{memberId};
    </delete>







