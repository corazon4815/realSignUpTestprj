<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.mapper.MainMapper">

    <!--로그인 체크-->
    <select id="loginChk" resultType="int" parameterType="hashMap">
        SELECT
               count(*)
        FROM   MEMBER_TB
        WHERE  MEMBER_ID=#{memberId}
        AND    MEMBER_PW=#{memberPw}
    </select>

    <!--아이디 중복체크-->
    <select id="duplChk" resultType="int" parameterType="String">
        SELECT
               count(*)
        FROM   MEMBER_TB
        WHERE  MEMBER_ID=#{memberId}
     </select>

    <insert id="memberRegister" parameterType="org.example.model.MemberDto">
        INSERT INTO MEMBER_TB
         (
            MEMBER_ID,
            MEMBER_NAME,
            MEMBER_PW,
            MEMBER_ADDRESS,
            MEMBER_BIRTH
         )VALUES (
            #{memberId},
            #{memberName},
            #{memberPw},
            #{memberAddress},
            #{memberBirth}
         )
     </insert>

